<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivSearchOVV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/ic_search"
        android:contentDescription="search"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tabAnalysisOverview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toEndOf="@+id/tabAnalysisOverview"
        app:layout_constraintTop_toTopOf="@+id/tabAnalysisOverview" />

    <ImageView
        android:id="@+id/ivShareOVV"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_cam"
        android:contentDescription="share"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tabAnalysisOverview"
        app:layout_constraintEnd_toStartOf="@+id/tabAnalysisOverview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabAnalysisOverview" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabAnalysisOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/tabbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@drawable/tab_bg"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="#FF9800" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpAnalysisOverview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabAnalysisOverview" />
</androidx.constraintlayout.widget.ConstraintLayout>